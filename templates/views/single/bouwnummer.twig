{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="container mx-auto px-4 lg:px-0 lg:mt-6">
        <section class="content">
            <h1 class="bouwnummer-header-title">Bouwnummer {{ post.title }}</h1>
            <h2 class="bouwnummer-header-title">{{ type_side }}kant type {{ type_denom }}{{ post.get_field('is_mirrored') ? 'sp' : '' }}</h2>
            <aside class="lg:flex">
                <figure class="lg:w-2/3">
                    <img src="{{ header_image.drawing.src('large') }}" alt="{{ header_image.drawing.alt }}" />
                </figure>
                <figure class="hidden lg:block lg:w-1/3">
                    <img src="{{ header_image.animals.src }}" alt="{{ header_image.animals.alt }}" style="height: 400px;" />
                </figure>
            </aside>
        </section>

        {{ include('components/disclaimer.twig') }}

        <section class="lg:flex content mt-6">
            <div class="lg:w-1/3 lg:mr-6">
                <h3 class="titel-{{ impression_title|lower }} mb-6">
                    {% if type_side is same as ('Water') %}
                        {{ impression_title }} aan het water
                    {% else %}
                        {{ impression_title }} aan de polder
                    {% endif %}
                </h3>

                <ul>
                    <li>Bouwnummer {{ post.title }}</li>
                    <li>Woonoppervlakte ca. {{ living_area }}m<sup>2</sup></li>
                    <li>Kaveloppervlakte ca. {{ post.get_field('plot_area') }}m<sup>2</sup></li>
                    {% if extra_attributes %}
                        <li>{{ extra_attributes }}</li>
                    {% endif %}
                </ul>

                <p class="content mt-6">
                    {{ term.description }}
                </p>
            </div>

            <div class="lg:w-2/3">
                <figure>
                    <img src="{{ plot_overview.src('large') }}" alt="{{ plot_overview.alt }}">
                </figure>
            </div>
        </section>

        {{ include('components/separator.twig') }}

        <section class="lg:flex mt-6">
            <div class="lg:w-1/3 lg:pr-6 hidden lg:block">
                <figure>
                    <img src="{{ image_theme.src('large') }}" alt="{{ image_theme.alt }}" style="height: 500px;">
                </figure>
            </div>
            <div class="lg:w-1/3 lg:pr-6 hidden lg:block">
                <figure>
                    <img src="{{ image_impression.src('large') }}" alt="{{ image_impression.alt }}">
                </figure>
            </div>
            <div class="lg:w-1/3 content">
                <h3 class="mb-6">Kavel</h3>
                <figure>
                    <img src="{{ plot_map.src('large') }}" alt="{{ plot_map.alt }}">
                </figure>
            </div>
        </section>

        {{ include('components/separator.twig') }}

        <section class="content my-6">
            <h3>Plattegrond Type {{ type_denom }}</h3>
            {% if post.get_field('is_mirrored') %}
                <small>* De daadwerkelijke indeling van deze woning is gespiegeld.</small>
            {% endif %}
            <figure class="block mt-6">
                <img src="{{ floor_plan.src }}" alt="{{ floor_plan.alt }}" />
            </figure>
        </section>

        {{ include('components/disclaimer.twig') }}

        <section class="lg:flex mt-6">
            <a class="btn bare no-arrow black block no-underline mx-auto" href="/woningen/woningtypen/">
                Terug naar woningaanbod
            </a>
        </section>
    </div>
{% endblock %}
